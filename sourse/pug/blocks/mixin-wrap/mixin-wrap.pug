mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1")
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск по номеру или названию запчасти")
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

mixin project(title='Цветной четырехсекционный шкаф для одежды', ...imgs)
	+b.project-item(href="#")
		+b.card-slider
			+e.DIV.img-slider.swiper.slider-card-js
				.swiper-wrapper
					each img in imgs
						+e.DIV.slide.swiper-slide
							+e.img-wrap.bg-wrap
								+img(img,'bg').picture-bg
			.swiper-pagination
		+e.title!= title 

mixin tags()
	mixin tag(tag,activeClass)
		+e.col.col-6.col-sm-4.col-md-3.col-lg-auto
			+e.tag(href='#' class=(activeClass))!= tag
	+b.tags
		.container
			.row
				+tag('Столы<br>в&nbsp;стиле хай-тек', 'active')
				+tag('Столы классические')
				+tag('Столы в стиле лофт')
				+tag('Детские столы')
				+tag('Угловые столы')
				+tag('Из МДФ')
				+tag('ЛДСП')
				+tag('Столы с плиткой керамической')
				+tag('Столы классические')
				+tag('Столы в стиле лофт')
				+tag('Детские столы')

mixin status(empty)
	+b.status
		if empty
			| Нет в наличии
		else
			+icon("check")
			| В&nbsp;наличии ~ 11&nbsp;шт.
