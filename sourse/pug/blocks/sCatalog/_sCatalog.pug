				+e.col(class= wrapClass)
					+product-item(`3`,``,``,`badge`)
				+e.col(class= wrapClass)
					+product-item(`4`,``,``,``)
				+e.col(class= wrapClass)
					+product-item(`5`,``,``,``)
				+e.col(class= wrapClass)
					+product-item(`6`,``,``,``)
				+e.col(class= wrapClass)
					+product-item(`7`,``,``,``)
				+e.col(class= wrapClass)
					+product-item(`8`,``,``,``)
						.col-auto
							+e.btn(type="button").btn.btn-outline-primary
								+icon("cart")
								| В корзину
						+e.status.col Нет в наличии
