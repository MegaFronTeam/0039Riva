mixin product-item(i,t, p ,pr, badge)
	+b.ARTICLE.product-item
		+e.img-wrap(href="#")
			if badge
				+b.prod-tags
					.badge.bg-primary -15%
					.badge.custom-badge Новинка
					.badge.custom-badge Популярный
			+b.card-slider
				+e.DIV.img-slider.swiper.slider-card-js
					.swiper-wrapper
						+e.DIV.slide.swiper-slide
							+e.img-wrap
								.img-wrap-center
									+img(`img/prod-${i}.jpg`).res-i
						- for (var x =2; x < 5; x++)
							+e.DIV.slide.swiper-slide
								+e.img-wrap
									.img-wrap-center
										+img(`img/prod-${x+1}.jpg`)
				.swiper-pagination
		+e.caption
			.row
				+e.price.col-auto 12 000 ₽
				.col-auto
					+e.price--old 12 000 ₽
			+e.text
				| Код:  SK.SRT-200 (R)
				br
				| Мебель в кабинет руководителя
			+e.title
				a(href="#")  Стол руководителя с опорной тумбой, правый
			+e.footer
				.row
					if block
						block
					else
						.col-auto
							+e.btn(type="button").btn.btn-outline-primary
								+icon("cart")
								| В корзину
						+e.status.col
							+icon("check")
							| В&nbsp;наличии ~ 11&nbsp;шт.
			+e.list
				table
					tr
						th Длина

						th Ширина

						th Высота
						th Материал
					tr
						td 180 см
						td 90 см
						td  75 см
						td ЛДСП
	// /.product-item
