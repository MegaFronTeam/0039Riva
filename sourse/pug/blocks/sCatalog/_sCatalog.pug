mixin sCatalog(data)
	// start sCatalog
	+b.sCatalog.section&attributes(attributes)
		.container
			+e.top.section-title.text-center
				+e.UL.top-tabs.d-flex
					+e.LI.top-tab.active 
						h2 Скидки
					+e.LI.top-tab 
						h2 Новинки
					+e.LI.top-tab 
						h2 В наличии
				+e.NAV.bottom-tabs-wrapper
					+cataloglist()
			+e.row.row
				- const wrapClass="col-xl-3 col-lg-4 col-sm-6"
				+e.col(class= wrapClass)
					+product-item(`1`,``,``,``, 'badge')
				+e.col(class= wrapClass)
